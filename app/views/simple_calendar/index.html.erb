
<% date_begin = 1 %>
<%= month_calendar do |date| %>
    <% day=(date.to_s.delete'-').to_i%100 %>
    <% if day == date_begin%>
        <%= day %>
        <% @invents.each do |invent| %>
            <% if invent.date == date%>
               <br><%= link_to invent.title ,"#{invent.link}" %>
            <% end %>
        <%end%>
        <% date_begin = date_begin+1%>
    <%end%>

<% end %>

<%= link_to :"Create new Event",new_invent_path%>