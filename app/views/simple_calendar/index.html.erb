
<% date_begin = 1 %>
<%= month_calendar do |date| %>
    <% day=(date.to_s.delete'-').to_i%100 %>
    <% if day == date_begin%>
        <%= day %>
        <% @invents.each do |invent| %>
            <% if invent.date == date%>
               <%= link_to invent.title ,"https://github.com/#{invent.name}zheng" %>
            <% end %>
        <%end%>
        <% date_begin = date_begin+1%>
    <%end%>

<% end %>

